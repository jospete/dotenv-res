{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"definitions": {
		"environmentVariableMetadata": {
			"type": "object",
			"properties": {
				"type": {
					"enum": [
						"string",
						"number",
						"boolean"
					]
				},
				"default": {
					"oneOf": [
						{
							"type": "string"
						},
						{
							"type": "number"
						},
						{
							"type": "boolean"
						}
					]
				}
			},
			"required": [
				"type",
				"default"
			]
		}
	},
	"type": "object",
	"properties": {
		"entries": {
			"type": "object",
			"patternProperties": {
				"^[A-Z0-9_]+$": {
					"$ref": "#/definitions/environmentVariableMetadata"
				}
			}
		}
	},
	"required": [
		"entries"
	]
}